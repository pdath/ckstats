{
  "name": "ckstats",
  "version": "0.3.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "NODE_OPTIONS='--max-old-space-size=6144' next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "seed": "ts-node -P tsconfig.scripts.json scripts/seed.ts",
    "update-users": "ts-node -P tsconfig.scripts.json scripts/updateUsers.ts",
    "cleanup": "ts-node -P tsconfig.scripts.json scripts/cleanOldStats.ts",
    "vacuum": "PGPASSWORD=$DB_PASSWORD psql -h $DB_HOST -p $DB_PORT -U $DB_USER -d $DB_NAME -f scripts/vacuum.sql",
    "test": "jest",
    "test:watch": "jest --watch",
    "load-test": "next lint --fix && next build && clinic doctor --on-port 'autocannon -c 200 -d 10 localhost:$PORT' -- node ./node_modules/next/dist/bin/next start",
    "migration:run": "ts-node -P tsconfig.scripts.json ./scripts/migration.ts",
    "migration:run:skip": "ts-node -P tsconfig.scripts.json ./scripts/migration.ts --skip-initial"
  },
  "dependencies": {
    "@bitcoinerlab/secp256k1": "^1.2.0",
    "@tanstack/react-query": "^5.89.0",
    "bitcoinjs-lib": "^6.1.7",
    "daisyui": "^4.12.24",
    "next": "14.2.18",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.15.4",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.26"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.18.5",
    "@types/pg": "^8.15.5",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "autocannon": "^8.0.0",
    "autoprefixer": "^10.4.21",
    "clinic": "^13.0.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.32",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
